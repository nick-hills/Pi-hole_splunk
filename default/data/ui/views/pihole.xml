    </panel>
    <panel>
      <title>Local DHCP Queries</title>
      <single>
        <search>
          <query>tag=dhcp tag=network resp=DHCP|stats count</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="drilldown">none</option>
      </single>
    </panel>
